<h1>Overview of all authors</h1>

<a href='authors/new'>Add author</a>
<br>

<table>
    <tr>
        <th>Name</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Homepage</th>
    </tr>
    <% for @author in @authors %>
        <tr>
            <th><%= @author.name %></th>
            <th><%= @author.first_name %></th>
            <th><%= @author.last_name %></th>
            <th><%= @author.homepage %></th>
            <th>
                <a href="authors/<%= @author[:id] %>">Show</a>
            </th>
        </tr>
    <% end %>
</table>
